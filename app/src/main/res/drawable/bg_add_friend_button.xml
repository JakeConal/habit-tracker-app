<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#20000000"> <!-- Ripple color for touch feedback -->
    <item>
        <selector>
            <!-- Pending/Disabled state -->
            <item android:state_enabled="false">
                <shape android:shape="oval">
                    <solid android:color="#261E2939" /> <!-- ~15% opacity primary_blue -->
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/accent_blue" />
                </shape>
            </item>
            <!-- Default state -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>


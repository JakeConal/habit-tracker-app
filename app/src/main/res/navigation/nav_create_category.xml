<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_create_category"
    app:startDestination="@id/createCategoryFragment">

    <fragment
        android:id="@+id/createCategoryFragment"
        android:name="com.example.habittracker.ui.category.CreateCategoryFragment"
        android:label="Create Category"
        tools:layout="@layout/fragment_create_category">
        
        <argument
            android:name="category_id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
            
        <argument
            android:name="category_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
            
        <argument
            android:name="category_icon"
            app:argType="integer"
            android:defaultValue="0" />
            
        <argument
            android:name="category_background"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>

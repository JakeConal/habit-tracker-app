<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, show light blue background -->
    <item android:state_selected="true" android:color="@color/accent_blue" />
    <!-- When pressed, show light blue background -->
    <item android:state_pressed="true" android:color="@color/accent_blue" />
    <!-- Default: white -->
    <item android:color="@android:color/white" />
</selector>


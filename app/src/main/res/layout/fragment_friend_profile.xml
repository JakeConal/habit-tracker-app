<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ui.social.friend.FriendProfileFragment">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/friend_profile_header_height"
            android:paddingHorizontal="@dimen/spacing_lg"
            android:paddingVertical="@dimen/spacing_md"
            android:layout_marginTop="30dp"
            android:background="@color/header_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="fitCenter"
                android:background="@drawable/button_background_round"
                android:contentDescription="@string/back" />

            <TextView
                android:id="@+id/tvHeaderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="sans-serif-medium"
                tools:text="Emma Thompson" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                android:scaleType="fitCenter"
                android:background="@drawable/button_background_round"
                android:contentDescription="@string/settings" />

        </RelativeLayout>

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardCornerRadius="@dimen/friend_profile_card_radius"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Avatar with white border -->
                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="@dimen/friend_profile_avatar_size"
                    android:layout_height="@dimen/friend_profile_avatar_size"
                    android:background="@drawable/bg_avatar_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivProfileAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/friend_profile_avatar_border"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/profile_avatar"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        tools:src="@tools:sample/avatars" />

                </FrameLayout>

                <!-- User Info -->
                <LinearLayout
                    android:id="@+id/userInfoContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md"
                    app:layout_constraintTop_toTopOf="@id/avatarContainer"
                    app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
                    app:layout_constraintStart_toEndOf="@id/avatarContainer"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primary_blue"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Emma Thompson" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:textColor="@color/friend_profile_text_secondary"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="fahaduxlab@gmail.com" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tab Switcher -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tabSwitcher"
            android:layout_width="0dp"
            android:layout_height="@dimen/friend_profile_tab_height"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/friend_profile_tab_radius"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/btnPostsTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/friend_profile_posts_tab"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_friend_tab_selected"
                    android:fontFamily="sans-serif-medium"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnFriendsTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/friend_profile_friends_tab"
                    android:textSize="14sp"
                    android:textColor="@color/friend_profile_text_tertiary"
                    android:gravity="center"
                    android:background="@drawable/bg_friend_tab_unselected"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Area (scrolls; header stays sticky) -->
        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/tabSwitcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Posts RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPosts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/spacing_lg"
                android:visibility="visible"
                tools:itemCount="3"
                tools:listitem="@layout/item_post" />

            <!-- Friends RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFriends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/spacing_lg"
                android:visibility="gone"
                tools:itemCount="3"
                tools:listitem="@layout/item_friend" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/friend_profile_empty_posts"
                android:textSize="16sp"
                android:textColor="@color/friend_profile_text_tertiary"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/card_border"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCommentAuthorAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:contentDescription="Commenter Avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvCommentAuthorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Commenter Name"
            android:textColor="@color/primary_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCommentAuthorAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivCommentAuthorAvatar" />

        <TextView
            android:id="@+id/tvCommentTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h ago"
            android:textColor="@color/secondary_gray"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/tvCommentAuthorName"
            app:layout_constraintTop_toBottomOf="@id/tvCommentAuthorName" />

        <TextView
            android:id="@+id/tvCommentContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="This is a comment"
            android:textColor="@color/primary_blue"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvCommentAuthorName"
            app:layout_constraintTop_toBottomOf="@id/tvCommentTimestamp" />

        <LinearLayout
            android:id="@+id/layoutCommentActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvCommentAuthorName"
            app:layout_constraintTop_toBottomOf="@id/tvCommentContent">

            <LinearLayout
                android:id="@+id/containerCommentLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivCommentLike"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_heart_outline"
                    android:contentDescription="Like comment"
                    app:tint="@color/secondary_gray" />

                <TextView
                    android:id="@+id/tvCommentLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0"
                    android:textColor="@color/secondary_gray"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerCommentDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivCommentDislike"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_thumb_down_outline"
                    android:contentDescription="Dislike comment"
                    app:tint="@color/secondary_gray" />

                <TextView
                    android:id="@+id/tvCommentDislikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0"
                    android:textColor="@color/secondary_gray"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Reply"
                android:textColor="@color/secondary_gray"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp" />

            <TextView
                android:id="@+id/btnDeleteComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Delete"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=""
                android:textColor="@color/secondary_gray"
                android:textSize="11sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Replies RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReplies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="48dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCommentActions"
            tools:listitem="@layout/item_comment_reply"
            tools:visibility="visible"
            tools:itemCount="2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


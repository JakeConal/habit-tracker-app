<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/leaderboard_card_height"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_md"
    android:gravity="center_vertical"
    android:background="@color/card_background">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/leaderboard_text_gray"
            android:textSize="@dimen/text_lg" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/leaderboard_avatar_size"
            android:layout_height="@dimen/leaderboard_avatar_size"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="David Martinez"
                android:textColor="@color/leaderboard_text_primary"
                android:textSize="@dimen/text_lg" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1850 pts"
            android:textColor="@color/leaderboard_points"
            android:textSize="@dimen/text_lg" />

</LinearLayout>
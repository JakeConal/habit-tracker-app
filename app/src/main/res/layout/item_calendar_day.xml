<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/calendar_day_width"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:minWidth="@dimen/calendar_day_width"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="50dp"
    app:cardBackgroundColor="@color/card_calendar_day_bg"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="@dimen/spacing_md"
        android:paddingHorizontal="@dimen/spacing_sm">

        <TextView
            android:id="@+id/tvDayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textSize="18sp"
            android:textColor="@color/text_calendar_day"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:textSize="@dimen/text_sm"
            android:textColor="@color/text_calendar_day"
            android:fontFamily="sans-serif"
            android:gravity="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.settings.SettingsFragment">

    <!-- Header with Back Button, Title, and Settings Icon -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:layout_marginTop="30dp"
        android:background="@color/header_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_settings"
            android:scaleType="fitCenter"
            android:background="@drawable/button_background_round"
            android:contentDescription="@string/back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings_title"
            android:textSize="18sp"
            android:textColor="@color/primary_blue"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <!-- Settings Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_lg"
        app:cardBackgroundColor="@color/settings_card_bg"
        app:cardCornerRadius="@dimen/settings_card_radius"
        app:cardElevation="@dimen/no_elevation"
        app:strokeColor="@color/settings_card_border"
        app:strokeWidth="@dimen/settings_button_border"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSettingsMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:overScrollMode="never"
            tools:listitem="@layout/item_setting_menu"
            tools:itemCount="7" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

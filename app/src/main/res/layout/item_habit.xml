<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <!-- Habit Icon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/habitIconBackground"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="@color/icon_bg_pink"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivHabitIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_heart"
            android:contentDescription="@string/app_name" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Habit Info -->
    <TextView
        android:id="@+id/tvHabitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Praying Namaz"
        android:textSize="16sp"
        android:textColor="@color/primary_blue"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/habitIconBackground"
        app:layout_constraintEnd_toStartOf="@id/btnCheck"
        app:layout_constraintTop_toTopOf="@id/habitIconBackground"
        tools:text="Praying Namaz" />

    <TextView
        android:id="@+id/tvHabitStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Completed"
        android:textSize="12sp"
        android:textColor="@color/secondary_gray"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@id/habitIconBackground"
        app:layout_constraintEnd_toStartOf="@id/btnCheck"
        app:layout_constraintTop_toBottomOf="@id/tvHabitName"
        tools:text="Completed" />

    <!-- Check Button -->
    <FrameLayout
        android:id="@+id/btnCheck"
        android:layout_width="@dimen/check_button_size"
        android:layout_height="@dimen/check_button_size"
        android:background="@drawable/bg_check_button"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:contentDescription="@string/app_name" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

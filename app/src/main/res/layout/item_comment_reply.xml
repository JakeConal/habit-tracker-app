<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivReplyAuthorAvatar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:contentDescription="Reply author avatar"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReplyAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply Author"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReplyTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30m ago"
                android:textColor="@color/secondary_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvReplyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="This is a reply"
                android:textColor="@color/primary_blue"
                android:textSize="12sp" />

            <!-- Reply Actions -->
            <LinearLayout
                android:id="@+id/layoutReplyActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="start">

                <LinearLayout
                    android:id="@+id/containerReplyLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/ivReplyLike"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_heart_outline"
                        android:contentDescription="Like reply"
                        app:tint="@color/secondary_gray" />

                    <TextView
                        android:id="@+id/tvReplyLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="@color/secondary_gray"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnReplyToReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Reply"
                    android:textColor="@color/secondary_gray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvNestedReplyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=""
                    android:textColor="@color/secondary_gray"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Nested Replies RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNestedReplies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="36dp"
        android:nestedScrollingEnabled="false"
        android:visibility="gone"
        tools:listitem="@layout/item_comment_reply"
        tools:visibility="visible"
        tools:itemCount="1" />

</LinearLayout>


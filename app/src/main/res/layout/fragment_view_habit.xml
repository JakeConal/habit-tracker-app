<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:clipToPadding="false">

    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_action_button">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_back"
                app:tint="@color/primary_blue" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            style="@style/HeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/text_lg"
            tools:text="Walk" />

        <!-- Optional Action Button (right) -->
        <FrameLayout
            android:id="@+id/btnOptionalAction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_action_button"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- Form Content with ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_lg"
            android:paddingBottom="@dimen/spacing_lg"
            android:orientation="vertical">

            <!-- Habit Title Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/habit_title_label"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <EditText
                    android:id="@+id/etHabitTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:fontFamily="sans-serif"
                    android:hint="@string/habit_title_hint"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="13dp"
                    android:textColor="#364153"
                    android:textColorHint="#6A7282"
                    android:textSize="@dimen/text_lg" />
            </LinearLayout>

            <!-- Categories Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/categories_label"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <LinearLayout
                    android:id="@+id/btnCategorySelector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/categoryIconBackground"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardBackgroundColor="@color/icon_bg_pink"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivCategoryIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_book"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvCategoryName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="@string/default_category"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_chevron_down" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quantity and Measurement Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="horizontal">

                <!-- Quantity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/quantity_label"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <LinearLayout
                        android:id="@+id/btnQuantitySelector"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_field"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="17dp">

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="@string/default_quantity"
                            android:textColor="#364153"
                            android:textSize="@dimen/text_lg" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_chevron_down" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Measurement -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/measurement_label"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <LinearLayout
                        android:id="@+id/btnMeasurementSelector"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_field"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="17dp">

                        <TextView
                            android:id="@+id/tvMeasurement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="@string/default_measurement"
                            android:textColor="#364153"
                            android:textSize="@dimen/text_lg" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_chevron_down" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Frequency Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/frequency_label"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <LinearLayout
                    android:id="@+id/btnFrequencySelector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp">

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="@string/default_frequency"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_chevron_down" />
                </LinearLayout>
            </LinearLayout>

            <!-- Time Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/time_label"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <LinearLayout
                    android:id="@+id/btnTimeSelector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="@string/default_time"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_chevron_down" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons Section -->
            <!-- Primary Action: Start Pomodoro Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartPomodoro"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:background="@drawable/bg_create_button"
                android:fontFamily="sans-serif"
                android:text="@string/start_pomodoro"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_lg"
                app:backgroundTint="@null" />

            <!-- Secondary Actions: Delete and Save side-by-side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="horizontal">

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_button_rounded_white"
                    android:fontFamily="sans-serif"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_md"
                    app:backgroundTint="@null" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_rounded_white"
                    android:fontFamily="sans-serif"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_md"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

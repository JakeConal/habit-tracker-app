<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:clipToPadding="false">

    <!-- Header Container -->
    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:background="@color/header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_back"
            android:scaleType="fitCenter"
            android:background="@drawable/button_background_round"
            android:contentDescription="@string/back" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Create Habit"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <!-- Form Content with ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_lg"
            android:paddingBottom="@dimen/spacing_lg"
            android:orientation="vertical">

            <!-- Habit Title Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Habit Title"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <EditText
                    android:id="@+id/etHabitTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:fontFamily="sans-serif"
                    android:hint="Reading a book"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="13dp"
                    android:textColor="#364153"
                    android:textColorHint="#6A7282"
                    android:textSize="@dimen/text_lg" />
            </LinearLayout>

            <!-- Categories Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Categories"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <LinearLayout
                    android:id="@+id/btnCategorySelector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp">

                    <FrameLayout
                        android:id="@+id/categoryIconBackground"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_category_icon_pink_light">

                        <ImageView
                            android:id="@+id/ivCategoryIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_book"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvCategoryName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:fontFamily="sans-serif"
                        android:text="Reading"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_chevron_down" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quantity and Measurement Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="horizontal">

                <!-- Quantity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/quantity_label"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_field"
                        android:fontFamily="sans-serif"
                        android:hint="30"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:paddingHorizontal="17dp"
                        android:paddingVertical="13dp"
                        android:textColor="#364153"
                        android:textColorHint="#6A7282"
                        android:textSize="@dimen/text_lg" />
                </LinearLayout>

                <!-- Measurement -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Measurement"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <LinearLayout
                        android:id="@+id/btnMeasurementSelector"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_field"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="17dp">

                        <TextView
                            android:id="@+id/tvMeasurement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="Mins"
                            android:textColor="#364153"
                            android:textSize="@dimen/text_lg" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_chevron_down" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Frequency Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="How often do you want to do it?"
                    android:textColor="#364153"
                    android:textSize="@dimen/text_lg" />

                <LinearLayout
                    android:id="@+id/btnFrequencySelector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp">

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Everyday"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />


                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_chevron_down" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pomodoro Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="@string/pomodoro_required"
                        android:textColor="#364153"
                        android:textSize="@dimen/text_lg" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchPomodoro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPomodoroSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/focus_duration_label"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/etFocusDuration"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_input_field"
                                android:inputType="number"
                                android:paddingHorizontal="12dp"
                                android:text="25" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/short_break_label"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/etShortBreak"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_input_field"
                                android:inputType="number"
                                android:paddingHorizontal="12dp"
                                android:text="5" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/long_break_label"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/etLongBreak"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_input_field"
                                android:inputType="number"
                                android:paddingHorizontal="12dp"
                                android:text="15" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_sessions_label"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/etTotalSessions"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_input_field"
                                android:inputType="number"
                                android:paddingHorizontal="12dp"
                                android:text="4" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Create Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreate"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:background="@drawable/bg_create_button"
        android:elevation="8dp"
        android:fontFamily="sans-serif"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/primary_blue"
        android:textSize="@dimen/text_lg"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

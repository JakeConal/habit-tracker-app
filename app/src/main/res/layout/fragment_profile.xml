<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ui.settings.ProfileFragment">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:layout_marginTop="30dp"
        android:background="@color/header_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="fitCenter"
            android:background="@drawable/button_background_round"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/profile"
            android:textSize="16sp"
            android:textColor="@color/primary_blue"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_settings"
            android:scaleType="fitCenter"
            android:background="@drawable/button_background_round"
            android:contentDescription="@string/settings" />

    </RelativeLayout>

    <!-- Profile Card (Sticky) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:background="@drawable/bg_profile_card"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/bg_profile_card">

                    <!-- Avatar Container -->
                    <FrameLayout
                        android:id="@+id/avatarContainer"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <!-- Avatar Image -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivProfileAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/bg_avatar_border"
                            android:contentDescription="@string/profile_avatar"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            tools:src="@tools:sample/avatars" />

                        <!-- Verification Badge -->
                        <ImageView
                            android:id="@+id/ivVerifiedBadge"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_verified_badge"
                            android:background="@drawable/bg_edit_button"
                            android:contentDescription="@string/verified_badge" />

                    </FrameLayout>

                    <!-- User Info -->
                    <LinearLayout
                        android:id="@+id/userInfoContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@id/avatarContainer"
                        app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
                        app:layout_constraintStart_toEndOf="@id/avatarContainer"
                        app:layout_constraintEnd_toStartOf="@id/btnEditProfile">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/default_user_name"
                            android:textSize="16sp"
                            android:textColor="@color/primary_blue"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/default_user_email"
                            android:textSize="14sp"
                            android:textColor="@color/accent_light_gray"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- Edit Button -->
                    <ImageButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_edit"
                        android:scaleType="fitCenter"
                        android:background="@drawable/bg_edit_button"
                        android:contentDescription="@string/edit_profile"
                        app:layout_constraintTop_toTopOf="@id/avatarContainer"
                        app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Tab Switcher (Sticky) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tabSwitcher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="44dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:background="@drawable/bg_tab_switcher"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:background="@drawable/bg_tab_switcher">

                    <TextView
                        android:id="@+id/btnMyPost"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="@string/my_post"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/bg_tab_selected"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/btnMyFriends"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="@string/my_friends"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>
</com.google.android.material.card.MaterialCardView>

    <!-- ViewPager2 Container -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tabSwitcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


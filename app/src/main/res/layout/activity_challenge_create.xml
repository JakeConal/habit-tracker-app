<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <!-- Header with Back Button and Title -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:layout_marginTop="30dp"
        android:background="@color/header_background">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_back"
            android:scaleType="fitCenter"
            android:background="@drawable/button_background_round"
            android:contentDescription="@string/back" />

        <!-- Title: Create Challenge -->
        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/create_challenge"
            android:textSize="18sp"
            android:textColor="@color/primary_blue"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp">

            <!-- Image Upload Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImageUpload"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:alpha="0.7">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivChallengePreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/challenge_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_challenge"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layoutImagePlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:tint="@color/secondary_gray"
                            android:contentDescription="@string/add_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tap_to_add_image"
                            android:textColor="@color/secondary_gray"
                            android:textSize="14sp" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:alpha="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Title Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_title"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeColor="@color/secondary_gray">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etChallengeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_challenge_title"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Short Description Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/short_description"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeColor="@color/secondary_gray"
                        app:counterEnabled="true"
                        app:counterMaxLength="100">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etChallengeDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_short_description"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLength="100"
                            android:maxLines="2"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Detailed Description Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_description"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeColor="@color/secondary_gray">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etChallengeDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_detailed_description"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="3"
                            android:maxLines="5"
                            android:gravity="top"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Key Results Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/key_results"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/key_results_hint"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeColor="@color/secondary_gray">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etKeyResults"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_key_results"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="3"
                            android:maxLines="5"
                            android:gravity="top"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Duration Selection -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_duration"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/rgDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbSevenDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seven_days_challenge"
                            android:textColor="@color/primary_blue"
                            android:checked="true"
                            android:padding="8dp" />

                        <RadioButton
                            android:id="@+id/rbThirtyDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/thirty_days_challenge"
                            android:textColor="@color/primary_blue"
                            android:padding="8dp" />

                        <RadioButton
                            android:id="@+id/rbHundredDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hundred_days_challenge"
                            android:textColor="@color/primary_blue"
                            android:padding="8dp" />

                    </RadioGroup>

                    <!-- Reward Points Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reward_points"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeColor="@color/secondary_gray"
                        app:prefixText="@string/points_prefix"
                        app:prefixTextColor="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRewardPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_reward_points"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Create Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateChallenge"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/create_challenge_button"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/accent_blue_dark"
                app:cornerRadius="14dp"
                app:elevation="0dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

